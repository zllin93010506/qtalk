<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/FullLayoutSetup" 
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:weightSum="1"
  android:background="@drawable/bg_h">
    <!-- xmlns:android="http://schemas.android.com/apk/res/android" --> 
    <TableLayout 
        android:id="@+id/LayoutSetup" 
        android:layout_width="fill_parent"
 		android:layout_height="500dp"
 		android:layout_marginTop="80dp"
        android:shrinkColumns="0" 
        android:stretchColumns="1" 
        android:layout_weight="0.30">
        <TableRow android:id="@+id/TableRowIcon" 
              android:layout_height="wrap_content" 
              android:layout_width="fill_parent"
              android:gravity="center">
              <ImageView 
					android:id="@+id/login_Icon"
					android:layout_width="fill_parent"
					android:layout_height="120dp"
					android:layout_gravity="center"
					android:src="@drawable/login_img_logo"/>
        </TableRow>
        <TableRow android:id="@+id/TableRow01" 
              android:layout_height="wrap_content" 
              android:layout_width="fill_parent"
              android:layout_marginTop="-20dp"
              android:gravity="center">
              <ImageView 
					android:layout_width="wrap_content"
					android:layout_height="40dp" 
					android:gravity="center"
					android:visibility="gone"
					android:src="@null"/>
        </TableRow>
        <TableRow android:id="@+id/TableRow02" 
              android:layout_height="wrap_content" 
              android:layout_width="fill_parent"
              android:layout_marginTop="100dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:background="@drawable/login_img_input"
              android:gravity="center">
            <TextView android:id="@+id/mUserName" 
                android:singleLine="true" 
                android:layout_height="80dp"
                android:layout_width="wrap_content"
                android:maxLength="32"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="10pt"/>
          </TableRow>
          <TableRow 
              android:id="@+id/TableRow03" 
              android:layout_height="wrap_content" 
              android:layout_width="fill_parent"
              android:layout_marginTop="5dp"
              android:background="@drawable/login_img_input"
              android:layout_marginLeft="20dip"
              android:layout_marginRight="20dip"
              android:gravity="center">
          <TextView android:id="@+id/mPassWord"
				  android:layout_width="wrap_content"
      			  android:layout_height="80dp"
      			  android:textSize="10pt"
      			  android:maxLength="32"
      			  android:textColor="#000000"
      			  android:gravity="center"/>
          </TableRow>
          <TableRow android:id="@+id/TableRow04" 
              android:layout_height="wrap_content" 
              android:layout_width="fill_parent"
              android:layout_marginTop="5dp">
          </TableRow>
          <TableRow android:id="@+id/TableRow05" 
              android:layout_height="wrap_content" 
              android:layout_width="fill_parent"
              android:layout_marginTop="5dp">
            <TextView android:id="@+id/TxtServer" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="Server"
                android:padding="5dip"
                android:visibility="gone"
                android:layout_marginRight="5px">
            </TextView>
          </TableRow>   
     </TableLayout>

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginTop="-15dp">
      	<ProgressBar
      	    android:id="@+id/progressBar1"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_centerHorizontal="true"
      	    android:layout_centerVertical="true" />
      	<TextView
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:layout_alignParentBottom="true"
      	    android:layout_centerHorizontal="true"
      	    android:padding="5dip"
      	    android:text="登入中..." />
	</RelativeLayout >
	<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp">
      	<TextView
	          android:id="@+id/versionName"
	          android:layout_width="fill_parent"
	          android:layout_height="30dp"
	          android:gravity="center"
	          android:text="1111"
			  android:textSize="12sp"			
			  android:textColor="#0C746E"/>
	</RelativeLayout >

</TableLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
        xmlns:android="http://schemas.android.com/apk/res/android" 
      android:layout_width="fill_parent" 
      android:layout_height="fill_parent" 
      android:id="@+id/layout_audiosession"
      android:background="@drawable/bg_h"> 
    
	<RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:background="@drawable/portrait_img_titlebar">
        <ImageView
            android:id="@+id/callicon"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/session_icn_title"/>
	</RelativeLayout>

        <TextView
            android:id="@+id/callerName"
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:singleLine="true"
            android:gravity="center"
            android:text="Unknown User"
            android:textColor="#666666"
            android:textSize="45pt"
            android:textStyle="bold"/>
    

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" >
    </RelativeLayout>
    <!-- Function button -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container"
        android:layout_centerHorizontal="true" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/faceiconview"
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:src="@drawable/session_remote_view"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/faceiconview" 
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
    
    <TextView  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/voicetimer"
        style="@style/callingText"    
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="11pt"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="5dp"/>
        
        <ImageButton
            android:id="@+id/endBtn"
            android:layout_width="200dp"
            android:layout_height="100dp"  
            android:scaleType="fitXY"         
            android:background="@null"
            android:paddingBottom="40dp"
            android:src="@drawable/session_btn_bye" />
        <ImageButton
            android:id="@+id/SwitchVideoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:background="@null"
            android:paddingBottom="10dp"
            android:src="@drawable/btn_call_video_on" />
      </LinearLayout>

</RelativeLayout>
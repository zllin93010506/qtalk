<configuration>
    <property name="LOG_DIR" value="/sdcard/Android/data/com.quanta.qtalk/QSPT_LOG" />

    <!--=================================LogcatAppender==========================================-->
    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>PhoneApp</pattern>
        </tagEncoder>
        <encoder>
            <pattern>%msg</pattern>
             <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--=================================RollingFileAppender=====================================-->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/qtalk-logfile.txt</file>
        <prudent>true</prudent>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_DIR}/qtalk-logfile-%d{yyyy-MM-dd}.txt</fileNamePattern>
            <!-- each file should be at most 5MB, keep 7 days worth of history, but at most 50MB -->
            <!--maxFileSize>5MB</maxFileSize-->
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
	<encoder>
            <pattern>%date %-5level/PhoneApp [%thread]%msg %n</pattern>
            <charset>UTF-8</charset>
        </encoder>

    </appender>

    <!--=================================SyslogAppender=====================================-->
    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>${QSPT_LOG_SERVER}</syslogHost>
        <facility>LOCAL7</facility>
        <suffixPattern>com.quanta.qtalk@${QSPT_DEVICE_ID}: %msg {%logger{0}} %n</suffixPattern>
    </appender>
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>262144</queueSize>
        <appender-ref ref="SYSLOG" />
    </appender>

    <root level="DEBUG">
	<appender-ref ref="LOGCAT" />
        <appender-ref ref="ASYNC" />
	<appender-ref ref="ROLLING" />
    </root>

</configuration>
